{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["*.ts", "routes/**/*.ts", "models/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
